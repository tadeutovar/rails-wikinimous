<div class="container">
  <div class="d-flex justify-content-center">
      <h2>New Article</h2>
  </div>

    <div class="d-flex justify-content-center">
      <%= form_for @article do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :content %>
        <%= f.text_field :content %>
        <%= f.submit %>
      <% end %>
    </div>
</div>
